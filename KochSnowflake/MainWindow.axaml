<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:KochSnowflake"
    x:Class="KochSnowflake.MainWindow"
    Width="1200" Height="800"
    Title="Снежинка Коха"
    Background="{DynamicResource SolidBackgroundBrush}">

    <Grid ColumnDefinitions="*,300">
        <local:FractalCanvas x:Name="Canvas"
                             Grid.Column="0"
                             FitPadding="24" />

        <Border Grid.Column="1" Background="{DynamicResource ThemeControlLowBrush}" Padding="16">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="12">

                    <TextBlock Text="Снежинка Коха" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8" />

                    <StackPanel>
                        <TextBlock Text="Количество итераций" Margin="0,0,0,6" />
                        <NumericUpDown x:Name="IterUpDown"
                                       Minimum="0" Maximum="7" Value="4"
                                       Increment="1" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button x:Name="ResetBtn" Content="Сброс вида" />
                    </StackPanel>

                    <Separator />

                    <TextBlock Text="Управление" FontWeight="Bold" />
                    <StackPanel Margin="8,4,8,8" Spacing="4">
                        <TextBlock Text="• Колесо мыши — приближение/отдаление" TextWrapping="Wrap" />
                        <TextBlock Text="• Зажмите ЛКМ и тяните — панорама" TextWrapping="Wrap" />
                    </StackPanel>

                    <Separator />

                    <TextBlock Text="Отладка" FontWeight="Bold" />
                    <StackPanel Margin="8,4,8,8" Spacing="4">
                        <TextBlock x:Name="DbgIter" TextWrapping="Wrap" />
                        <TextBlock x:Name="DbgZoom" TextWrapping="Wrap" />
                        <TextBlock x:Name="DbgVerts" TextWrapping="Wrap" />
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>